FROM ubuntu
ENV DEBBIAN_FRONTEND=noninteractive
RUN apt-get update
RUN apt-get upgrade -y
RUN apt-get install vim openssh-server net-tools sudo -y
RUN apt-get install ansible -y
COPY hosts /etc/ansible/hosts
RUN echo 'root:password' | chpasswd
RUN mkdir /home/nidhi
RUN useradd nidhi
RUN echo 'nidhi:nidhi123' | chpasswd
RUN chown nidhi:nidhi /home/nidhi
RUN echo "nidhi    ALL=(ALL:ALL) NOPASSWD:ALL" >> /etc/sudoers
USER nidhi
WORKDIR /home/nidhi
RUN ssh-keygen -q -t rsa -N '' -f /home/nidhi/.ssh/id_rsa
EXPOSE 22 
